    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" charset="utf8"
            src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {

            $(".sidebar-menu >li.have-children a").on("click", function (i) {
                i.preventDefault();
                if (!$(this).parent().hasClass("active")) {
                    $(".main-menu li ul").slideUp();
                    $(this).next().slideToggle();
                    $(".main-menu li").removeClass("active");
                    $(this).parent().addClass("active");
                }
                else {
                    $(this).next().slideToggle();
                    $(".main-menu li").removeClass("active");
                }
            });

            $(".main-menu").on("mouseleave", function () {
                $('li.have-children').removeClass("active");
                $('li.have-children .submenu').hide();
            });

            $('.submenu li,#listDashboard').click(function (event) {
                $(".container").hide()
                $("#" + $(this).attr('id') + "Container").show();
            });

            //$('#example').DataTable();
        });
    </script>
</head>
<body>
    <div class="area">
        @RenderBody() 
        <footer>
            
        </footer>

        <nav class="main-menu">
            <ul class="sidebar-menu no-children">
                <li id="listDashboard">
                    <a href="#" class="dashboardlist">
                        <i class="fa fa-home fa-2x"></i>
                        <span class="nav-text">
                            Dashboard
                        </span>

                    </a>


                </li>
                <li class="have-children">
                    <a href="#">
                        <i class="fa fa-laptop fa-2x"></i>
                        <span class="nav-text">
                            Department
                        </span>
                    </a>
                    <ul class="submenu collapse list-unstyled" id="department_Submenu">
